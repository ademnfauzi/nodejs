<div class="container mt-3">
   <div class="row">
      <div class="col-md-8">
         <h2>Detail Contact</h2>
         <% if (!contact) { %>
         <div class="alert alert-danger fw-bold" role="alert">
            Data Contact Tidak Ada !!!
            <br />
            <a href="/contact" class="alert-link fw-normal">&laquo; Kembali</a>
         </div>
         <% } else { %>

         <div class="card" style="width: 18rem">
            <div class="card-body">
               <h5 class="card-title"><%= contact.nama %></h5>
               <h6 class="card-subtitle mb-2 text-muted">
                  <%= contact.nohp %>
               </h6>
               <p class="card-text"><%= contact.email %></p>
               <a href="/contact" class="card-link">&laquo Back</a>
               <a
                  href="/contact/edit/<%= contact.nama %>"
                  class="btn btn-warning badge card-link"
                  >Edit</a
               >
               <form
                  action="/contact?_method=DELETE"
                  method="post"
                  class="d-inline"
               >
                  <input
                     type="hidden"
                     name="nama"
                     value="<%= contact.nama %>"
                  />
                  <button
                     class="btn btn-danger badge card-link"
                     type="submit"
                     onclick="return confirm('Yakin ?')"
                  >
                     Hapus
                  </button>
               </form>
            </div>
         </div>
         <% } %>
      </div>
   </div>
</div>
